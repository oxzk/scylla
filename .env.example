# =============================================================================
# Scylla Proxy Pool Configuration
# =============================================================================
# Copy this file to .env and configure the values according to your environment
# All settings have default values and are optional unless marked as required

# =============================================================================
# Database Settings
# =============================================================================
# PostgreSQL connection URL (REQUIRED)
# Format: postgresql://username:password@host:port/database
DB_URL=postgresql://user:password@localhost:5432/scylla

# Database connection pool settings
DB_MIN_POOL_SIZE=2
DB_MAX_POOL_SIZE=10

# =============================================================================
# Application Settings
# =============================================================================
# Server host and port
APP_HOST=0.0.0.0
APP_PORT=8000

# Debug mode (true/false)
APP_DEBUG=false

# Application secret key for security features
APP_SECRET=your-secret-key-here

# Number of worker processes
APP_WORKER=1

# =============================================================================
# Scheduler Intervals (in seconds)
# =============================================================================
# How often to crawl new proxies from sources
CRAWL_INTERVAL=3600

# How often to validate pending proxies
VALIDATE_INTERVAL=20

# How often to re-validate successful proxies
VALIDATE_SUCCESS_INTERVAL=60

# How often to cleanup failed proxies
CLEANUP_INTERVAL=1200

# How often to update proxy country information
UPDATE_COUNTRY_INTERVAL=600

# =============================================================================
# Limits and Concurrency
# =============================================================================
# Maximum failure count before removing a proxy
MAX_FAIL_COUNT=3

# Maximum number of proxies to validate in each batch
VALIDATE_BATCH_LIMIT=300

# Maximum concurrent spider tasks
MAX_CONCURRENT_SPIDERS=5

# Maximum concurrent validator tasks
MAX_CONCURRENT_VALIDATORS=50

# =============================================================================
# Validator Settings
# =============================================================================
# Timeout for proxy validation requests (in seconds)
VALIDATOR_TIMEOUT=25

# URL used for testing proxy connectivity and anonymity
VALIDATOR_TEST_URL=https://httpbin.org/get

# =============================================================================
# Logging
# =============================================================================
# Logging format string (supports ANSI color codes)
LOG_FORMAT=\033[38;5;240m%(asctime)s\033[0m %(levelname)s: \033[1000D\033[26C\033[K %(message)s

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/0
